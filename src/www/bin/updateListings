#!/bin/bash

grab="/usr/bin/tv_grab_na --days=7"
tmpfile=/var/media/tmp/listings.xml
goodfile=/var/media/tv.xml

nice -n 19 $grab > $tmpfile 2> blah 
status=$?
echo "Exit status was: "$status >> blah
cat blah >> /var/media/tmp/listings.log
cat blah |  mailx -s updateListings your@email.addy
rm blah

if [ $status -eq 0 -a -e $tmpfile ]
then
  mv $tmpfile $goodfile
fi

cd /opt/freevo
nice -n 19 ./freevo execute src/tv/epg_xmltv.py
su -c "cd /opt/freevo/src/www; . bin/ENV; nice -n 19 python rec_favorites.py" www-data
