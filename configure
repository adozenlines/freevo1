#!/bin/sh

# configure - the main configure script
#
# $Id$
#

PYTHON_VERSION=`python -c "import sys ; ok = sys.version_info[:3] >= (2,1,0) ; print ok"`

if python -V 2>/dev/null >/dev/null  && \
    [[ "$PYTHON_VERSION" -eq "1" ]]; then
	python setup_build.py $*
else
	echo "Installed python version is outdated. Please upgrade to 2.1.0 or better"
fi

