#!/bin/sh

# configure - the main configure script
#
# $Id$
#

REQUIRE_PYTHON=210
PYTHON_VERSION=`python -V 2>&1 | cut -d' ' -f2 | sed -e 's/\.//g'`  # sh doesn't understand decimals

if [[ "$PYTHON_VERSION" -gt "$REQUIRE_PYTHON" ]]; then
	python setup_build.py $*
else
	echo "Installed python version is outdated. Please upgrade to 2.1.0 or better"
fi

#python setup_build.py $*

