# cd to the freevo directory if necessary
if ! [ -e src/identifymedia.py ]; then
    cd `dirname $0`
fi

# Is runapp present? If not, the user must have a good python installation
if ! [ -e runapp ]; then
    echo
    echo
    echo "WARNING: ./runapp not found."
    echo
    echo "Please make sure you have the most recent version of Freevo,"
    echo "and *please* use the full binary version that includes all"
    echo "dependencies including ./runapp unless you're an experienced user."
    echo 
    echo "Trying to start the configure program..."
    echo
    echo
    
    # XXX Check for python2 etc?
    python setup_build.py $@
    exit 0
fi

# ./runapp will figure out which python to use
./runapp python setup_build.py $@

exit 0
