<?xml version="1.0" ?>
<freevo>
  <skin>

    <!-- Settings for a normal menu -->
    <menu>
      <bgbitmap>../images/aubin_barbieri.png</bgbitmap>
      <title visible="yes" x="10" y="15">
	<font name="impact" size="38" color="0x000000"/>
      </title>

      <item_dir>
        <font name="impact" size="18" color="0x38474c"/>
        <selection length="653" bgcolor="0x38474c">
           <font name="impact" size="18" color="0xffffff"/>
           <shadow visible="yes" mode="solid" color="0x000000" x="2" y="2"/> <!-- mode= solid | translucent -->
        </selection>
        <shadow visible="yes" mode="solid" color="0x000000" x="1" y="1"/> <!-- mode= solid | translucent -->
      </item_dir>

      <item_pl>
         <font name="arialbi" size="15" color="0x58677c"/>
 	 <selection length="653" color="0xffffff" bgcolor="0x38474c">
            <font name="arialbi" size="15" color="0xffffff"/>
            <shadow visible="yes" mode="solid" color="0x000000" x="2" y="2"/> <!-- mode= solid | translucent -->
         </selection>
         <shadow visible="yes" mode="solid" color="0x000000" x="1" y="1"/> <!-- mode= solid | translucent -->
      </item_pl>

      <item_main>
        <font name="arialbd" size="28" color="0x38474c"/>
        <selection length="653" color="0xffffff" bgcolor="0x38474c">
          <font name="arialbd" size="28" color="0xffffff"/>
          <shadow visible="yes" mode="solid" color="0x000000" x="3" y="3"/> <!-- mode= solid | translucent -->
        </selection>
        <shadow visible="yes" mode="solid" color="0x000000" x="2" y="2"/> <!-- mode= solid | translucent -->
      </item_main>

      <items x="60" y="100" height="390">
	<font name="arial" size="15" color="0x000000"/>
	<selection length="653" color="0xffffff" bgcolor="0x000000">
     	   <font name="arial" size="15" color="0xffffff"/>
           <shadow visible="yes" mode="solid" color="0x000000" x="1" y="1"/> <!-- mode= solid | translucent -->
        </selection>
        <shadow visible="no" mode="solid" color="0x000000" x="1" y="1"/> <!-- mode= solid | translucent -->
      </items>

      <cover>
	<movie visible="yes" x="538" y="100" width="200" height="280"/>
	<music visible="yes" x="538" y="100" width="200" height="200"/>
	<image visible="yes" x="538" y="100" width="200" height="160"/>
      </cover>
      <submenu x="40" y="520">
	<font name="RUBTTS__" size="20" color="0x000000"/>
	<selection length="154" bgcolor="0x08171c" color="0xffffff">
           <font name="RUBTTS__" size="20" color="0xffffff"/>
           <shadow visible="yes" mode="solid" color="0x000000" x="2" y="2"/> <!-- mode= solid | translucent -->
        </selection>
      </submenu>
    </menu>   

    <main>        
      <item pos="0" name="TV"       action="tv.main_menu"  arg="" visible="yes" icon="icons/tv.png"   />
      <item pos="1" name="Movie"    action="movie.main_menu" arg="" visible="yes" icon="icons/movies.png"  />
      <item pos="2" name="Music"    action="music.main_menu" arg="" visible="yes" icon="icons/mp3.png"  />
      <item pos="3" name="Image"    action="imenu.main_menu" arg="" visible="yes" icon="icons/images.png"  />
      <item pos="4" name="Shutdown" action="shutdown" arg="" visible="yes" icon="icons/shutdown2.png"  />
    </main>


    
    <!-- Settings for the mp3 player -->
    <mp3>
      <title visible="yes" x="10" y="15">
	<font name="impact" size="38" color="0x000000"/>
      </title>
      <bgbitmap>../images/aubin_barbieri.png</bgbitmap>
      <font name="arialbd" size="18" color="0x58677c"/>
      <shadow visible="yes" mode="solid" color="0x000000" x="1" y="1"/> <!-- mode= solid | translucent -->
      <progressbar visible="yes" x="0" y="490" width="767" height="5" color="0x58677c" bgcolor="0xffffff" border_color="0x000000" border_size="1"/>
    </mp3>
  </skin>
</freevo>
