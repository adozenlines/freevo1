<?xml version="1.0" ?>
<freevo>
  <skin>

    <!-- Settings for a normal menu -->
    <menu>
      <bgbitmap>../images/aubin_barbieri.png</bgbitmap>
      <title visible="yes" x="384" y="15">
	<font name="oliversb" size="38" color="0x38474c" align="center"/>
        <shadow visible="yes" color="0x000000" x="1" y="1"/>
      </title>

      <item_dir>
        <font name="oliversb" size="18" color="0x38474c"/>
        <selection length="653" bgcolor="0xaa38474c">
           <font name="oliversb" size="18" color="0xffffff"/>
           <shadow visible="yes" color="0x000000" x="2" y="2"/>
        </selection>
        <shadow visible="yes" color="0x000000" x="1" y="1"/>
      </item_dir>

      <item_pl>
         <font name="neuropol" size="15" color="0x58677c"/>
 	 <selection length="653" color="0xffffff" bgcolor="0xaa38474c">
            <font name="neuropol" size="15" color="0xffffff"/>
            <shadow visible="yes" color="0x000000" x="2" y="2"/>
         </selection>
         <shadow visible="yes" color="0x000000" x="1" y="1"/>
      </item_pl>

      <item_main>
        <font name="oliversb" size="28" color="0x58677c"/>
        <selection length="653" color="0xffffff" bgcolor="0xaa38474c">
          <font name="oliversb" size="28" color="0xffffff"/>
          <shadow visible="yes" color="0xaa000000" x="3" y="3"/>
        </selection>
        <shadow visible="yes" color="0x000000" x="2" y="2"/>
      </item_main>

      <items x="60" y="95" height="390">
	<font name="bluehigh" size="15" color="0x000000"/>
	<selection length="653" color="0xffffff" bgcolor="0xaa000000">
     	   <font name="bluehigh" size="15" color="0xffffff"/>
           <shadow visible="yes" color="0x000000" x="1" y="1"/>
        </selection>
        <shadow visible="no" color="0x000000" x="1" y="1"/>
      </items>

      <cover>
	<movie visible="yes" x="538" y="100" width="200" height="280"/>
	<music visible="yes" x="538" y="100" width="200" height="200"/>
	<image visible="yes" x="538" y="100" width="200" height="160"/>
      </cover>

      <submenu x="40" y="520">
	<font name="interpla" size="20" color="0x000000"/>
	<selection length="154" bgcolor="0x9908171c" color="0xffffff">
           <font name="interpla" size="20" color="0xffffff"/>
           <shadow visible="yes" color="0x000000" x="2" y="2"/>
        </selection>
      </submenu>
    </menu>   

    <main>        
      <item pos="0" name="TV"       action="tv.main_menu"    arg="" visible="yes" icon="icons/64x64/tv.png"        selected_icon="icons/64x64/tv_selected.png" />
      <item pos="1" name="Movie"    action="movie.main_menu" arg="" visible="yes" icon="icons/64x64/movies.png"    selected_icon="icons/64x64/movies_selected.png" />
      <item pos="2" name="Music"    action="music.main_menu" arg="" visible="yes" icon="icons/64x64/mp3.png"       selected_icon="icons/64x64/mp3_selected.png" />
      <item pos="3" name="Image"    action="imenu.main_menu" arg="" visible="yes" icon="icons/64x64/images.png"    selected_icon="icons/64x64/images_selected.png" />
      <item pos="4" name="Shutdown" action="shutdown"        arg="" visible="yes" icon="icons/64x64/shutdown.png" selected_icon="icons/64x64/shutdown_selected.png" />
    </main>

    
    <!-- Settings for the mp3 player -->
    <mp3>
      <title visible="yes" x="10" y="15">
	<font name="oliversb" size="38" color="0x000000"/>
      </title>
      <bgbitmap>../images/aubin_barbieri.png</bgbitmap>
      <font name="bluehigh" size="18" color="0x58677c"/>
      <shadow visible="yes" color="0x000000" x="1" y="1"/>
      <progressbar visible="yes" x="0" y="490" width="767" height="5" color="0x58677c" bgcolor="0xffffff" border_color="0x000000" border_size="1"/>
    </mp3>
  </skin>
</freevo>
