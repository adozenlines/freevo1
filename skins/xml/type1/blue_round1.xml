<?xml version="1.0" ?>
<freevo>

   <skin include="blue1_small" geometry="800x600">
    
    <!-- Settings for a normal menu -->
    <menu type="all">

      <background>
	<mask>
	  <rectangle x="30" y="120" width="530" height="375" color="0x80000000"
	    radius="10"/>
	</mask>
      </background>

      <title visible="yes" x="500" y="25" width="600">
	<font name="oliversb" size="28" color="0xffffff" align="center"/>
	<shadow visible="yes" color="0x80000000" x="3" y="3"/>
      </title>

      <items x="60" y="145" height="345" width="470">
	<item type="all">
	  <font name="bluehigh" size="19"/>
	  <shadow visible="no"/> 
	  <selection visible="yes" bgcolor="0xff000000" radius="5" spacing="8">
	    <font name="bluehigh" size="19"/>
	    <shadow visible="yes" color="0x000000" x="1" y="1"/>
	  </selection>
	</item>
      </items>

      <covers>
	<cover type="movie" y="100">
	  <mask>
	    <rectangle x="545" y="85" width="230" height="310" 
	      color="0x80000000" radius="10"/>
	  </mask>
	</cover>
	<cover type="music" y="100">
	  <mask>
	    <rectangle x="545" y="85" width="230" height="230" 
	      color="0x80000000" radius="10"/>
	  </mask>
	</cover>
	<cover type="image" y="100">
	  <mask>
	    <rectangle x="545" y="85" width="230" height="330" 
	      color="0x80000000" radius="10"/>
	  </mask>
	</cover>
      </covers>

      <submenu x="30" y="530">
	<font name="bluehigh" size="20" color="0xffffff"/>
	<selection length="154" bgcolor="0x80000000" radius="10">
           <font name="bluehigh" size="20" color="0xffffff"/>
           <shadow visible="yes" color="0x000000" x="2" y="2"/>
        </selection>
      </submenu>

    </menu>

    <!-- Override some settings for the main menu -->
    <menu type="main">
      <background mask=""/>
      <title visible="no"/>
      <logo x="560"/>
      <items x="240" y="140" width="380" height="400">
	<item type="all">
	  <font name="bluehigh" size="44" color="0xffffff"/>
	  <shadow visible="yes" color="0x000000" x="1" y="1"/>

	  <selection bgcolor="0xaa000000">
	    <font name="bluehigh" size="44" color="0xffffff"/>
	    <shadow visible="yes" color="0xaa000000" x="3" y="3"/>
	  </selection>
	</item>
      </items>
    </menu>


    <!-- Settings for a popup box -->
    <popup mask="" bgcolor="0xaa000000" border_size="1" border_color="0x000000">
      <message>
	<font name="bluehigh" size="18"/>
      </message>
    </popup>


    <extendedmenu type="tv">
      <info>
	<background radius="10" spacing="10"/>
      </info>

      <view>
	<background radius="10"/>
      </view>

      <listing>
        <table border_size="0"> 
	   <label>
	      <background radius="3"/>
	   </label>
	   <head>
	      <background radius="3" />
	   </head>
	   <content>
	      <background radius="3"/>
	   </content>
        </table>
      </listing>

    </extendedmenu>
  </skin>
  

</freevo>
