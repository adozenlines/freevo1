<?xml version="1.0" ?>
<freevo>
  
  <skin geometry="800x600">

    <!-- Items of the main menu (will change soon) -->
    <main>        
      <item pos="0" name="TV"       action="tv.tv.main_menu"  arg="" 
        visible="yes" icon="skins/icons/AquaFusion/tv.png"   />
      <item pos="1" name="Movies" action="MediaMenu().main_menu" arg="video" 
        visible="yes" icon="skins/icons/AquaFusion/movies.png"  />
      <item pos="2" name="Music"   action="MediaMenu().main_menu" arg="audio" 
        visible="yes" icon="skins/icons/AquaFusion/mp3.png"  />
      <item pos="3" name="Images"   action="MediaMenu().main_menu" arg="image" 
        visible="yes" icon="skins/icons/AquaFusion/images.png"  />
      <item pos="4" name="Games"   action="MediaMenu().main_menu" arg="games" 
        visible="no" icon="skins/icons/AquaFusion/package_games.png"  />
      <item pos="5" name="Shutdown" action="ShutdownItem" arg="" 
	visible="yes" icon="skins/icons/AquaFusion/shutdown.png"  />
    </main>
    
    <!-- Settings for a normal menu -->
    <menu type="all">

      <background image="../../images/aubin_bg2"/>
      <logo visible="yes" x="20" y="20" image="../../images/logo.png"/>

      <title visible="no" x="400" y="19">
	<font name="Arial_Bold" size="36" color="0x000000" align="center"/>
	<shadow visible="no" color="0xaaffffff" x="3" y="3"/>
      </title>

      <items x="60" y="120" height="390" width="680">
	<item type="all">
	  <font name="Arial_Bold" size="19" color="0xdddddd"/>
	  <shadow visible="no" color="0x000000" x="1" y="1"/> 
	  <selection visible="yes" color="0xffffff" bgcolor="0xa0000000" radius="0">
	    <font name="Arial_Bold" size="19" color="0xffffff"/>
	    <shadow visible="no" color="0x000000" x="1" y="1"/>
	  </selection>
	</item>
      </items>

      <covers>
	<cover type="movie" visible="yes" x="560" y="115" width="200"
	  height="280" border_color="0x000000" border_size="1"/>
	<cover type="music" visible="yes" x="560" y="115" width="200"
	  height="200" border_color="0x000000" border_size="1"/> 

	<!-- for images width and height is the rectangle to draw the image -->
	<!-- into. The aspect ration will not be changed! -->
	<cover type="image" visible="yes" x="560" y="115" width="200" 
	  height="300" border_color="0x000000" border_size="1"/>
      </covers>
      
      <submenu x="40" y="520">
	<font name="Arial_Bold" size="15" color="0xdddddd"/>
	<selection length="154" bgcolor="0xa008171c" radius="0">
	  <font name="Arial_Bold" size="15" color="0xffffff"/>
	  <shadow visible="no" color="0x000000" x="2" y="2"/>
        </selection>
      </submenu>
	
    </menu>   

    <!-- Override some settings for the main menu -->
    <menu type="main">
      <items x="230" width="320">
	<item type="all">
	  <font size="34" color="0xffffff"/>
	  <selection>
	    <font size="34"/>
	  </selection>
	</item>
      </items>
    </menu>

    <!-- Settings for the mp3 player -->
    <mp3>
      <title visible="no" x="400" y="15">
	<font name="Arial_Bold" size="38" color="0xffffff" align="center"/>
      </title>

      <background image="../../images/aubin_bg2">
	<mask>
	  <rectangle x="-25" y="88" width="666" height="232" color="0x80000000" radius="20"/>
	</mask>
      </background>

      <cover visible="yes" x="475" y="200" width="300" height="300" 
	border_color="0x000000" border_size="1"> 
	<mask>
	  <rectangle x="460" y="185" width="400" height="330" 
	    color="0x80000000" radius="20"/>
	</mask>
      </cover>

      <fileinfo x="30" y="94" height="200" width="521">
	<font name="Arial_Bold" size="18" color="0xffffff"/>
	<shadow visible="no"/>
      </fileinfo>

      <progressbar visible="no"/>
    </mp3>



    <!-- Settings for a popup box -->
    <popup mask="" bgcolor="0x99000000" radius="15" spacing="20">
      <message x="100" y="100" width="600" height="400">
	<font name="Arial_Bold" size="17" color="0xffffff" align="center"/>
	<shadow visible="no"/>
      </message>
    </popup>


    <extendedmenu type="tv">
      <background image="../../images/aubin_bg2" mask=""/>
      <logo visible="yes" x="20" y="20" image="../../images/logo_100x50.png"/>

      <header>
        <geometry x="20" y="20" width="760" height="55"/>
	<font name="Arial_Bold" size="25" color="0xffffff" align="center" valign="center"/>
	<shadow visible="no"/>
      </header>

      <info spacing="10">
        <geometry x="20" y="80" width="620" height="130"/>
	<background color="0xaa000000"/>
	<font name="Arial_Bold" size="16" color="0xffffff" align="left"/>
	<shadow visible="no" color="0x000000" x="1" y="1"/>
      </info>
      
      <view>
        <geometry x="650" y="80" width="130" height="130"/>
	<background color="0x000000"/>
	<font name="Arial_Bold" size="20" color="0xffffff" align="center" valign="center"/>
	<shadow visible="no"/>
      </view>
      
      <listing type="table">
        <geometry x="20" y="220" width="760" height="350"/>
	<background color="0xbb58677c"/>
	
	<expand>
	  <geometry x="10" y="75" width="780" height="495"/>
	  <background color="0xffffffff"/>
	</expand>

	<table border_color="0xaa000000" border_size="2" spacing="3">
	  <label bgcolor="0x88000066" width="158">
	    <font name="Arial_Bold" size="19" color="0xffffff" align="center" 
	      valign="center"/>
	    <shadow visible="no"/>
	  </label>

	  <head bgcolor="0x88000066">
	    <font name="Arial_Bold" size="19" color="0xffffff" align="left" 
	      valign="center"/>
	    <shadow visible="no"/>
	  </head>

	  <content>
	    <font name="Arial_Bold" size="19" color="0xffffff" align="left"/>
	    <shadow visible="no"/>

	    <selection bgcolor="0x88ffffff">
	      <font name="Arial_Bold" size="19" color="0xffff66"/>
	      <shadow visible="yes" color="0x000000" x="1" y="1"/>
	    </selection>

	    <indicator type="left" image="skins/images/arrow_left.png"/>
	    <indicator type="right" image="skins/images/arrow_right.png"/>
	  </content>
	</table>

      </listing>
    </extendedmenu>


    <extendedmenu type="image">
      <background image="../../images/aubin_bg2" mask=""/>
      <logo visible="yes" x="20" y="20" image="../../images/logo_100x50.png"/>

      <info spacing="10">
        <geometry x="20" y="90" width="450" height="190"/>
	<background color="0xaa000000"/>
	<font name="Arial_Bold" size="16" color="0xffffff" align="left"/>
	<shadow visible="no" color="0x000000" x="1" y="1"/>
      </info>
      
      <view spacing="5" radius="10">
        <geometry x="470" y="80" width="330" height="210" />
	<background color="0x000000"/>
	<font name="Arial_Bold" size="20" color="0xffffff" align="center" valign="center"/>
	<shadow visible="no"/>
	<img name="dir" src="skins/icons/gnome/gnome-folder.png"/>
	<img name="playlist" src="skins/icons/gnome/gedit-icon.png"/>
      </view>
      
      <listing type="table">
        <geometry x="20" y="300" width="760" height="290"/>
	<background color="0xbb58677c"/>
	
	<expand>
	  <geometry x="10" y="75" width="780" height="495"/>
	  <background color="0xffffffff"/>
	</expand>

	<table border_color="0xaa000000" border_size="2" spacing="5">

	  <content>
	    <preview width="160" height="100"/>

	    <font name="Arial_Bold" size="15" color="0xffffff" align="center"/>
	    <shadow visible="no"/>

	    <selection bgcolor="0x88ffffff" radius="10">
	      <font name="Arial_Bold" size="15" color="0xffff66" align="center"/>
	      <shadow visible="yes" color="0x000000" x="1" y="1"/>
	    </selection>

	    <img name="dir" src="skins/icons/gnome/gnome-folder.png"/>
	    <img name="playlist" src="skins/icons/gnome/gedit-icon.png"/>

	    <indicator type="up" image="skins/images/arrow_up.png"/>
	    <indicator type="down" image="skins/images/arrow_down.png"/>

	  </content>
	</table>

      </listing>
    </extendedmenu>

    <extendedmenu type="video">
      <background image="../../images/aubin_bg2" mask=""/>
      <logo visible="yes" x="20" y="20" image="../../images/logo_100x50.png"/>

      <info spacing="10" radius="10">
        <geometry x="20" y="70" width="760" height="230"/>
	<background color="0xaa000000"/>
	<font name="Arial_Bold" size="16" color="0xffffff" align="left"/>
	<shadow visible="no" color="0x000000" x="1" y="1"/>
      </info>
      
      <view spacing="5" visible="no">
        <geometry x="560" y="300" width="210" height="290" />
	<background color="0x000000"/>
	<font name="Arial_Bold" size="20" color="0xffffff" align="center" valign="center"/>
	<shadow visible="no"/>
	<img name="dir" src="skins/icons/gnome/gnome-folder.png"/>
	<img name="playlist" src="skins/icons/gnome/gedit-icon.png"/>
	<img name="default" src="skins/icons/AquaFusion/movies.png"/>
      </view>
      
      <listing type="table">
<!--
        This geometry fits View+Listing:
        <geometry x="30" y="310" width="532" height="270"/> 
-->
        <geometry x="20" y="310" width="760" height="270"/>
	<background color="0xbb58677c"/>
	
	<expand>
	  <geometry x="10" y="75" width="780" height="495"/>
	  <background color="0xffffffff"/>
	</expand>

	<table border_color="0xaa000000" border_size="2" spacing="5">

	  <content>
	    <preview width="142" height="200"/>
	  
	    <font name="Arial_Bold" size="15" color="0xffffff" align="center"/>
	    <shadow visible="no"/>

	    <selection bgcolor="0x88ffffff" radius="10">
	      <font name="Arial_Bold" size="15" color="0xffff66" align="center"/>
	      <shadow visible="yes" color="0x000000" x="1" y="1"/>
	    </selection>

	    <img name="dir" src="skins/icons/gnome/gnome-folder.png"/>
	    <img name="playlist" src="skins/icons/gnome/gedit-icon.png"/>
	    <img name="default" src="skins/icons/AquaFusion/movies.png"/>

	    <indicator type="up" image="skins/images/arrow_up.png"/>
	    <indicator type="down" image="skins/images/arrow_down.png"/>

	  </content>
	</table>

      </listing>
    </extendedmenu>

    
  </skin>
  
</freevo>
