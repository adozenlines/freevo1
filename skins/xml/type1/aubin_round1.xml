<?xml version="1.0" ?>
<freevo>

   <skin include="blue1_small" geometry="800x600">
    
    <!-- Settings for a normal menu -->
<main>
    <item pos="0" name="         Watch TV"       action="tv.tv.main_menu"  arg="" 
      visible="yes" icon="skins/images/aubin/tv_watermark.png" />
    <item pos="1" name="      Watch a Movie" action="MediaMenu().main_menu" arg="video" 
      visible="yes" icon="skins/images/aubin/movie_watermark.png"  />
    <item pos="2" name="     Listen to Music"   action="MediaMenu().main_menu" arg="audio" 
      visible="yes" icon="skins/images/aubin/music_watermark.png" />
    <item pos="3" name="     Look at Pictures"   action="MediaMenu().main_menu" arg="image" 
      visible="yes" icon="skins/images/aubin/image_watermark.png" />
    <item pos="4" name="Games"   action="MediaMenu().main_menu" arg="games" 
      visible="no" icon="" />
    <item pos="5" name="         Shutdown" action="ShutdownItem" arg="" 
      visible="yes" icon="skins/images/aubin/shutdown_watermark.png" />
</main>

    <menu type="all">
      <background image="skins/images/aubin/blurr.png"/>
      
      <logo visible="no"/>

      <title visible="no" x="600" y="225" width="600">
	<font name="Arial_Bold" size="36" color="0x80000000" align="center"/>
	<shadow visible="yes" color="0x80000000" x="3" y="3"/>
      </title>

      <items x="340" y="90" height="450" width="400">
	<item type="all">
	<logo visible="no"/>
	  <font name="Arial_Bold" size="16"/>
	  <shadow visible="no"/> 
	  <selection visible="yes" bgcolor="0xaa000000" radius="15" spacing="18" border_color="0xffffff" border="2">
	    <font name="Arial_Bold" size="16"/>
	    <shadow visible="no" color="0x000000" x="1" y="1"/>
	  </selection>
	</item>
      </items>

      <covers>
	<cover type="movie" visible="yes" x="450" y="315" width="200"
          height="280" border_color="0x000000" border_size="1">
        <mask>
          <rectangle x="545" y="85" width="230" height="310" 
            color="0x80000000" radius="10"/>
          </mask>
        </cover>

	<cover type="music" visible="yes" x="50" y="215" width="200"
          height="200" border_color="0x000000" border_size="1">
        <mask>
          <rectangle x="40" y="205" width="220" height="220" 
            color="0x80000000" radius="10"/>
          </mask>
        </cover>

      </covers>


      <submenu x="30" y="530" visible="no">
	<font name="Arial_Bold" size="20" color="0xffffff"/>
	<selection length="154" bgcolor="0x80000000" radius="10" border_size="2" border_color="0xffffff">
           <font name="Arial_Bold" size="20" color="0xffffff"/>
           <shadow visible="no" color="0x000000" x="2" y="2"/>
        </selection>
      </submenu>

    </menu>

    <menu type="video">
        <background mask="skins/images/aubin/movie_watermark.png"/>
    </menu>
    <menu type="audio">
        <background mask="skins/images/aubin/music_watermark.png"/>
    </menu>
    <menu type="image">
        <background mask="skins/images/aubin/image_watermark.png"/>
    </menu>


    <!-- Override some settings for the main menu -->
    <menu type="main">
      <background mask=""/>
      <title visible="no"/>
      <logo visible="no" x="560"/>
      <items x="240" y="190" width="280" height="190">
	<item type="all">
	  <font name="Arial_Bold" size="18" color="0xffffff"/>
	  <shadow visible="no" color="0x000000" x="1" y="1"/>

	  <selection bgcolor="0xaa000000" border_size="2" border_color="0xffffff">
	    <font name="Arial_Bold" size="18" color="0xffffff"/>
	    <shadow visible="no" color="0xaa000000" x="3" y="3"/>
	  </selection>
	</item>
      </items>
    </menu>

    <mp3>
        <background image="skins/images/aubin/blurr.png"/>
    </mp3>

    <!-- Settings for a popup box -->
    <popup mask="" bgcolor="0xaa000000" border_size="1" border_color="0xffffff">
      <message>
	<font name="Arial_Bold" size="18"/>
      </message>
    </popup>


    <extendedmenu type="tv">
      <background image="skins/images/aubin/blurr.png"/>
      <logo visible="no"/>
      <info>
	<background radius="10" spacing="10"/>
      </info>

      <view>
	<background radius="10"/>
      </view>

      <listing>
        <table border_size="0"> 
	   <label>
	      <background radius="3"/>
	   </label>
	   <head>
	      <background radius="3" />
	   </head>
	   <content>
	      <background radius="3"/>
	   </content>
        </table>
      </listing>

    </extendedmenu>
    
</skin>
</freevo>
