<?xml version="1.0" ?>
<freevo>

   <skin>

    <!-- Items of the main menu (will change soon) -->
    <main>        
      <item pos="0" name="TV"       action="tv.main_menu"  arg="" 
	visible="yes" icon="icons/64x64/tv.png"   />
      <item pos="1" name="Movies"   action="movie.main_menu" arg="" 
	visible="yes" icon="icons/64x64/movies.png"  />
      <item pos="2" name="Music"    action="music.main_menu" arg="" 
	visible="yes" icon="icons/64x64/mp3.png"  />
      <item pos="3" name="Images"   action="imenu.main_menu" arg="" 
	visible="yes" icon="icons/64x64/images.png"  />
      <item pos="4" name="Video Games" action="videogame.main_menu" arg="" 
	visible="no" icon="icons/64x64/videogame.png"  />
      <item pos="5" name="Shutdown" action="shutdown" arg="" 
	visible="yes" icon="icons/64x64/shutdown.png"  />
    </main>
    
    <!-- Settings for a normal menu -->
    <menu type="all">

      <background image="../../images/aubin_bg1_800x600.png" mask=""/>
      <logo visible="no"/>

      <title visible="yes" x="400" y="18">
	<font name="oliversb" size="36" color="0x000000" align="center"/>
	<shadow visible="no" color="0xaaffffff" x="3" y="3"/>
      </title>

      <items x="60" y="110" height="390" width="653">
	<item type="all">
	  <font name="bluehigh" size="18" color="0x000000"/>
	  <shadow visible="no" color="0x000000" x="1" y="1"/> 
	  <selection visible="yes" color="0xffffff" bgcolor="0xa0000000" radius="0">
	    <font name="bluehigh" size="18" color="0xffffff"/>
	    <shadow visible="yes" color="0x000000" x="1" y="1"/>
	  </selection>
	</item>

	<item type="dir">
	  <font color="0x38474c"/>
	  <selection bgcolor="0xa038474c"/>
	  <shadow visible="yes" color="0x000000" x="1" y="1"/>
	</item>

	<item type="playlist">
	  <font color="0x58677c"/>
	  <selection bgcolor="0xa038474c">
            <font color="0xffffff"/>
            <shadow color="0x000000"/>
	  </selection>
	  <shadow visible="yes"/>
	</item>
      </items>

      <covers>
	<cover type="movie" visible="yes" x="550" y="100" width="200"
	  height="280" border_color="0x000000" border_size="1"/>
	<cover type="music" visible="yes" x="550" y="100" width="200"
	  height="200" border_color="0x000000" border_size="1"/> 

	<!-- for images width and height is the rectangle to draw the image -->
	<!-- into. The aspect ration will not be changed! -->
	<cover type="image" visible="yes" x="550" y="100" width="200" 
	  height="300" border_color="0x000000" border_size="1"/>
      </covers>

      <submenu x="40" y="520">
	<font name="interpla" size="20" color="0x000000"/>
	<selection length="154" bgcolor="0xaa08171c" color="0xffffff" radius="0">
           <font name="interpla" size="20" color="0xffffff"/>
           <shadow visible="yes" color="0x000000" x="2" y="2"/>
        </selection>
      </submenu>

    </menu>

    <!-- Override some settings for the main menu -->
    <menu type="main">
      <items x="260" width="320">
	<item type="all">
	  <font name="neuropol" size="32" color="0x38474c"/>
	  <shadow visible="yes" color="0x000000" x="1" y="1"/>
      
	  <selection color="0xffffff" bgcolor="0xaa38474c">
	    <font name="neuropol" size="32" color="0xffffff"/>
	    <shadow visible="yes" color="0xa0000000" x="3" y="3"/>
	  </selection>
	</item>
      </items>
    </menu>


    <!-- Settings for the mp3 player -->
    <mp3>
      <title visible="yes" x="400" y="15">
	<font name="oliversb" size="38" color="0x000000" align="center"/>
      </title>
      <background image="../../images/aubin_bg1_800x600.png"/>
      <cover visible="yes" x="466" y="191" width="289"
	height="289" border_color="0x000000" border_size="1"/> 

      <fileinfo x="30" y="100" height="210" width="521">
	<font name="neuropol" size="18" color="0x58677c"/>
	<shadow visible="yes" color="0x000000" x="1" y="1"/>
      </fileinfo>

      <progressbar visible="yes" x="0" y="515" width="799" height="5"      
	color="0x58677c" bgcolor="0xffffff" 
	border_color="0x000000" border_size="1"/>
    </mp3>


    <!-- Settings for a popup box -->
    <popup bgcolor="0x33ffffff" border_size="2" border_color="0x000000">
      <message x="100" y="100" width="600" height="400">
	<font name="bluehigh" size="18" color="0x000000" align="center"/>
	<shadow visible="no"/>
      </message>
    </popup>


    <!-- setup for the extended menu tv -->

    <extendedmenu type="tv">
      <background image="../../images/aubin_bg1_800x600.png" mask=""/>
      <logo visible="no"/>

      <header>
        <geometry x="10" y="25" width="780" height="50"/>
	<font name="oliversb" size="28" color="0x000000" align="center" valign="center"/>
	<shadow visible="no"/>
      </header>

      <info>
        <geometry x="10" y="100" width="670" height="100"/>
	<background color="0xaa000000"/>
	<font name="bluehigh" size="16" color="0xffffff" align="left"/>
	<shadow visible="no" color="0x000000" x="1" y="1"/>
      </info>
      
      <view>
        <geometry x="690" y="100" width="100" height="100"/>
	<background color="0x000000"/>
	<font name="oliversb" size="24" color="0xffffff" align="center" valign="center"/>
	<shadow visible="no"/>
      </view>
      
      <listing type="table">
        <geometry x="10" y="210" width="780" height="300"/>
	<background color="0xbb58677c"/>
	
	<expand>
	  <geometry x="10" y="100" width="780" height="410"/>
	  <background color="0xffffffff"/>
	</expand>
	
	<table border_color="0xaa000000" border_size="2" spacing="2">
	  <label bgcolor="0x88000066" width="158">
	    <font name="bluehigh" size="18" color="0xffffff" align="center" valign="center"/>
	    <shadow visible="no"/>
	  </label>
	  
	  <content>
	    <font name="bluehigh" size="18" color="0x111111" align="left"/>
	    <shadow visible="no"/>
	    
	    <selection bgcolor="0xff000000">
	      <font name="bluehigh" size="18" color="0x000000"/>
	      <shadow visible="no"/>
	    </selection>
	    
	    <indicator type="left" image="skins/images/arrow_left.png"/>
	    <indicator type="right" image="skins/images/arrow_right.png"/>
	  </content>
	</table>

      </listing>
    </extendedmenu>

  </skin>
  
</freevo>
