<?xml version="1.0" ?>
<freevo>

   <skin>

    <!-- Items of the main menu (will change soon) -->
    <main>        
      <item pos="0" name="TV"       action="tv.main_menu"  arg="" 
	visible="yes" icon="icons/64x64/tv.png"   />
      <item pos="1" name="Movies"   action="movie.main_menu" arg="" 
	visible="yes" icon="icons/64x64/movies.png"  />
      <item pos="2" name="Music"    action="music.main_menu" arg="" 
	visible="yes" icon="icons/64x64/mp3.png"  />
      <item pos="3" name="Images"   action="imenu.main_menu" arg="" 
	visible="yes" icon="icons/64x64/images.png"  />
      <item pos="4" name="Video Games" action="videogame.main_menu" arg="" 
	visible="no" icon="icons/mame.png"  />
      <item pos="5" name="Shutdown" action="shutdown" arg="" 
	visible="yes" icon="icons/64x64/shutdown.png"  />
    </main>
    
    <!-- Settings for a normal menu -->
    <menu type="all">

      <background image="../images/aubin_bg2.png" mask="../images/menumask.png"/>
      <logo visible="yes" x="10" y="10" image="../images/logo.png"/>

      <title visible="yes" x="460" y="25">
	<font name="oliversb" size="28" color="0xffffff" align="center"/>
	<shadow visible="yes" color="0xaa000000" x="3" y="3"/>
      </title>

      <items x="60" y="105" height="370" width="620">
	<item type="all">
	  <font name="bluehigh" size="18" color="0x000000"/>
	  <shadow visible="no" color="0x000000" x="1" y="1"/> 
	  <selection visible="yes" color="0xffffff" bgcolor="0x000000">
	    <font name="bluehigh" size="18" color="0xffffff"/>
	    <shadow visible="yes" color="0x000000" x="1" y="1"/>
	  </selection>
	</item>

	<item type="dir">
	  <font color="0x38474c"/>
	  <selection bgcolor="0x38474c"/>
	  <shadow visible="yes" color="0x000000" x="1" y="1"/>
	</item>

	<item type="playlist">
	  <font color="0x58677c"/>
	  <selection bgcolor="0x38474c">
            <font color="0xffffff"/>
            <shadow color="0x000000"/>
	  </selection>
	  <shadow visible="yes"/>
	</item>
      </items>

      <covers>
	<cover type="movie" visible="yes" x="538" y="100" width="200"
	  height="280" border_color="0x000000" border_size="1"/>
	<cover type="music" visible="yes" x="538" y="100" width="200"
	  height="200" border_color="0x000000" border_size="1"/> 
	<cover type="image" visible="yes" x="538" y="100" width="200" 
	  height="160" border_color="0x000000" border_size="1"/>
      </covers>

      <submenu x="40" y="500">
	<font name="bluehigh" size="20" color="0xffffff"/>
	<selection length="154" bgcolor="0x08171c" color="0xffffff">
           <font name="bluehigh" size="20" color="0xffffff"/>
           <shadow visible="yes" color="0x000000" x="2" y="2"/>
        </selection>
      </submenu>

    </menu>

    <!-- Override some settings for the main menu -->
    <menu type="main">
      <background mask=""/>
      <title visible="no"/>
      <logo x="560"/>
      <items x="230" width="320">
	<item type="all">
	  <font name="bluehigh" size="36" color="0xffffff"/>
	  <shadow visible="yes" color="0x000000" x="1" y="1"/>

	  <selection color="0xffffff" bgcolor="0x000000">
	    <font name="bluehigh" size="36" color="0xffffff"/>
	    <shadow visible="yes" color="0xaa000000" x="3" y="3"/>
	  </selection>
	</item>
      </items>
    </menu>


    <!-- Settings for the mp3 player -->
    <mp3>
      <title visible="no"/>
      <background image="../images/aubin_bg2.png" mask="../images/highlight.png"/>

      <logo visible="yes" x="20" y="470" image="../images/logo.png"/>

      <cover visible="yes" x="466" y="191" width="289"
	height="289" border_color="0x000000" border_size="1"/> 

      <fileinfo x="30" y="90" height="210">
	<font name="bluehigh" size="20" color="0xffffff"/>
	<shadow visible="no" color="0x000000" x="1" y="1"/>
      </fileinfo>

      <progressbar visible="no" x="0" y="490" width="768" height="5"      
	color="0x58677c" bgcolor="0xffffff" 
	border_color="0x000000" border_size="1"/>
    </mp3>


    <!-- Settings for a popup box -->
    <popup bgcolor="0xaa000000" border_size="2" border_color="0x000000">
      <message x="180" y="240" width="420" height="100">
	<font name="bluehigh" size="18" color="0xffffff" align="center"/>
	<shadow visible="no"/>
      </message>
    </popup>



    <extendedmenu type="tv">
      <background image="../images/aubin_bg2.png" mask=""/>
      <logo visible="yes" x="10" y="10" width="100" height="60" image="../images/logo.png"/>

      <header>
        <geometry x="10" y="10" width="748" height="50"/>
	<font name="Arial_Bold" size="24" color="0xffffff" align="center" valign="center"/>
	<shadow visible="no"/>
     </header>

     <info>
        <geometry x="10" y="70" width="640" height="100"/>
	<background color="0xaa000000"/>
	<font name="Arial_Bold" size="16" color="0xffffff" align="left"/>
	<shadow visible="no" color="0x000000" x="1" y="1"/>
     </info>

     <view>
        <geometry x="658" y="70" width="100" height="100"/>
	<background color="0x000000"/>
	<font name="Arial_Bold" size="20" color="0xffffff" align="center" valign="center"/>
	<shadow visible="no"/>
     </view>

     <listing>
        <geometry x="10" y="180" width="748" height="370"/>
	<background color="0xbb58677c"/>

	<expand>
	  <geometry x="10" y="70" width="748" height="480"/>
	  <background color="0xffffffff"/>
	</expand>

	<font name="Arial_Bold" size="18" color="0xffffff" align="left"/>
	<shadow visible="no"/>

	<selection bgcolor="0x88ffffff">
	  <font name="Arial_Bold" size="18" color="0xffff66"/>
	  <shadow visible="yes" color="0x000000" x="1" y="1"/>
	</selection>


	<!-- I don't like the name and structure of the next tags -->

	<head bgcolor="0x88000066" x="393" y="20">
	  <font name="Arial_Bold" size="18" color="0xffffff" align="center" valign="center"/>
	  <shadow visible="no"/>
	</head>


	<border color="0xaa000000" size="2"/>
	<spacing value="2"/>
	<channel_width value="158"/>
	<indicator>
	  <left image="skins/images/arrow_left.png"/>
	  <right image="skins/images/arrow_right.png"/>
	</indicator>
      </listing>
    </extendedmenu>
    
  </skin>
  
</freevo>
