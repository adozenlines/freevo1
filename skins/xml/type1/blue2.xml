<?xml version="1.0" ?>
<freevo>

   <skin include="blue1_small" geometry="768x576">
    
    <!-- Settings for a normal menu -->
    <menu type="all">

      <background mask="../../images/menumask.png"/>

      <title visible="yes" x="460" y="25">
	<font name="oliversb" size="28" color="0xffffff" align="center"/>
	<shadow visible="yes" color="0xaa000000" x="3" y="3"/>
      </title>

      <items x="60" y="115" height="360" width="620">
	<item type="all">
	  <font name="bluehigh" size="18" color="0x000000"/>
	  <shadow visible="no" color="0x000000" x="1" y="1"/> 
	  <selection visible="yes" color="0xffffff" bgcolor="0xff000000" radius="8">
	    <font name="bluehigh" size="18" color="0xffffff"/>
	    <shadow visible="yes" color="0x000000" x="1" y="1"/>
	  </selection>
	</item>

	<item type="dir">
	  <font color="0x38474c"/>
	  <selection bgcolor="0xa038474c"/>
	  <shadow visible="yes" color="0x000000" x="1" y="1"/>
	</item>

	<item type="playlist">
	  <font color="0x58677c"/>
	  <selection bgcolor="0xa038474c">
            <font color="0xffffff"/>
            <shadow color="0x000000"/>
	  </selection>
	  <shadow visible="yes"/>
	</item>
      </items>

      <covers>
	<cover type="movie" y="112" spacing="50" border_size="0">
	  <mask>
	    <rectangle x="528" y="102" width="220" height="300" 
	      color="0xff000000" radius="8"/>
	  </mask>
	</cover>
	<cover type="music" y="112" spacing="50" border_size="0">
	  <mask>
	    <rectangle x="528" y="102" width="220" height="220" 
	      color="0xff000000" radius="8"/>
	  </mask>
	</cover>
	<cover type="image" y="112" spacing="50" border_size="0">
	  <mask>
	    <rectangle x="528" y="102" width="220" height="180" 
	      color="0xff000000" radius="8"/>
	  </mask>
	</cover>
      </covers>

      <submenu x="40" y="500">
	<font name="bluehigh" size="20" color="0xffffff"/>
	<selection length="154" bgcolor="0xa008171c" color="0xffffff">
           <font name="bluehigh" size="20" color="0xffffff"/>
           <shadow visible="yes" color="0x000000" x="2" y="2"/>
        </selection>
      </submenu>

    </menu>

    <!-- Override some settings for the main menu -->
    <menu type="main">
      <background mask=""/>
      <title visible="no"/>
      <logo x="560"/>
      <items x="230" width="320">
	<item type="all">
	  <font name="bluehigh" size="36" color="0xffffff"/>
	  <shadow visible="yes" color="0x000000" x="1" y="1"/>

	  <selection color="0xffffff" bgcolor="0xa0000000">
	    <font name="bluehigh" size="36" color="0xffffff"/>
	    <shadow visible="yes" color="0xaa000000" x="3" y="3"/>
	  </selection>
	</item>
      </items>
    </menu>

    <!-- Settings for a popup box -->
    <popup mask="" bgcolor="0xaa000000" radius="15" spacing="20">

      <message x="100" y="100" width="600" height="400">
	<font name="bluehigh" size="18" color="0xffffff" align="center"/>
	<shadow visible="no"/>
      </message>
    </popup>

  </skin>
  
</freevo>
