<?xml version="1.0" ?>
<freevo>

   <skin include="blue1_big" geometry="800x600">

    <!-- Settings for a normal menu -->
    <menu type="all">
      <items>
	<item type="all">
	  <font size="16"/>
	  <selection>
	    <font size="16"/>
	  </selection>
	</item>
      </items>
    </menu>   

    <!-- Override some settings for the main menu -->
    <menu type="main">
      <items>
	<item type="all">
	  <font size="28"/>
	  <selection>
	    <font size="28"/>
	  </selection>
	</item>
      </items>
    </menu>

    <extendedmenu type="tv">
      <info>
	<font size="13"/>
      </info>
      <listing>
	<table>
	  <label>
	    <font size="14"/>
	  </label>
	  <head>
	    <font size="14"/>
	  </head>
	  <content>
	    <font size="14"/>
	    <selection>
	      <font size="14"/>
	    </selection>
	  </content>
	</table>
      </listing>
    </extendedmenu>


  </skin>
  
</freevo>
