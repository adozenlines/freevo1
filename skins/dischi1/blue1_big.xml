<?xml version="1.0" ?>
<freevo>
  
  <skin geometry="800x600">
    <iconset dir="skins/icons/AquaFusion"/>

    <!-- Items of the main menu (will change soon) -->
    <main>        
      <item pos="0" name="TV"       action="tv.tv.main_menu"  arg="" 
        visible="yes" icon="skins/icons/AquaFusion/tv.png"   />
      <item pos="1" name="Movies" action="MediaMenu().main_menu" arg="video" 
        visible="yes" icon="skins/icons/AquaFusion/movies.png"  />
      <item pos="2" name="Music"   action="MediaMenu().main_menu" arg="audio" 
        visible="yes" icon="skins/icons/AquaFusion/mp3.png"  />
      <item pos="3" name="Images"   action="MediaMenu().main_menu" arg="image" 
        visible="yes" icon="skins/icons/AquaFusion/images.png"  />
      <item pos="4" name="Games"   action="MediaMenu().main_menu" arg="games" 
        visible="no" icon="skins/icons/AquaFusion/package_games.png"  />
      <item pos="5" name="Shutdown" action="ShutdownItem" arg="" 
	visible="yes" icon="skins/icons/AquaFusion/shutdown.png"  />
    </main>
    
    <!--
    First we have to define the menu: a background and the four areas
    with their dimensions. We point to a layout with the details
    -->
    <menu type="default">
      <screen layout="screen0" visible="yes">
	<area x="0" y="0" width="800" height="600"/>
      </screen>
      <title layout="title0" visible="yes">
	<area x="10" y="10" width="780" height="60"/> 
      </title>
      <view layout="view0" visible="no">
	<area x="560" y="115" width="200" height="300"/> 
      </view>
      <listing layout="list0" visible="yes">
	<area x="20" y="110" width="760" height="450"/>
      </listing>
      <info visible="no"/>
    </menu>

    <menu type="main">
      <!-- definition of the main menu -->
      <view visible="no"/>
      <title visible="no"/>
      <listing layout="list_main" visible="yes">
	<area x="230" y="120" width="380" height="390"/> 
      </listing>
    </menu>

    <!-- ********************************************** -->
    <!-- LAYOUT DEFINITIONS -->


    <!-- background -->
    <layout label="screen0">
      <background>
	<image filename="../images/aubin_bg2" x="0" y="0" label="background"/>
	<image filename="../images/logo.png" x="10" y="0" width="200" height="98"/>
      </background>
    </layout>

    <!-- title -->
    <layout label="title0">
      <content x="210" type="menu" font="white big" align="center"/>
    </layout>

    <!-- default listing area -->
    <layout label="list0">
      <content type="text" spacing="2">
	<item type="default" font="grey"/>
	<item type="selected" font="white">
	  <rectangle bgcolor="0xa0000000" size="0" x="-5" y="-3" width="max+10"
	    height="max+6"/>
	</item>
      </content>
    </layout>

    <!-- main menu listing area -->
    <layout label="list_main">
      <content type="text" spacing="10">
	<item type="default" font="grey big"/>
	<item type="selected" font="white big">
	  <rectangle bgcolor="0xa0000000" size="0" y="-5" x="-10"
	    width="max+20" height="max+10"/>
	</item>
      </content>
    </layout>

    <!-- ********************************************** -->
    <!-- FONT DEFINITIONS -->

    <font label="grey">
      <definition name="Arial_Bold" size="20" color="0xdddddd"/>
      <shadow visible="no"/>
    </font>

    <font label="white">
      <definition name="Arial_Bold" size="20" color="0xffffff"/>
      <shadow visible="no"/>
    </font>

    <font label="grey big">
      <definition name="Arial_Bold" size="35" color="0xdddddd"/>
      <shadow visible="no"/>
    </font>

    <font label="white big">
      <definition name="Arial_Bold" size="35" color="0xffffff"/>
      <shadow visible="no"/>
    </font>




    <popup type="default" layout="popup"/>

    <layout label="popup">
      <background>
	<rectangle color="0x000000" size="1" bgcolor="a0000000"/>
      </background>
      <content type="text" spacing="10" color="0xffffff" font="white">
	<item type="default" font="grey">
	  <rectangle bgcolor="0xa0000000" size="0"/>
	</item>
	<item type="selected" font="white">
	  <rectangle bgcolor="0xa0ffffff" size="0"/>
	</item>
      </content>
    </layout>
    
  </skin>
</freevo>