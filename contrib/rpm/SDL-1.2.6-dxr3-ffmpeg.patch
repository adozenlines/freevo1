+//	fprintf(stderr,"DXR3_CloseKeyboard() called.\n");
+
+	ioctl(0,TCSETS,&data->tio_orig);
+
+	if ( data->fd_keyboard >= 0 ) {
+		/* not necessary... */
+		/* close(data->fd_keyboard); */
+	}
+	data->fd_keyboard = -1;
